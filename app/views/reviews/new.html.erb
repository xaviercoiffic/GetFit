<div class="layout-content">
<h1>Leave a review</h1>

  <div class="row">
    <div class="col whity">
      <%= simple_form_for [@instructor, @booking, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
    <%= f.input :user_id, as:"hidden", input_html: { value: @instructor.id} %>
    <%= f.submit class: "btn-gf" %>
<% end %>

    </div>
  </div>
</div>
