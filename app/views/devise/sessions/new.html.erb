<div class="layout-content">
   <div class="m-auto mt-5 text-center">
    <%= image_tag("https://res.cloudinary.com/dbfx0jmo6/image/upload/v1676710070/GetFit/GetFit.mu_PNG_IDENTITY-07_cdvldx.png", width: 150, crop: :fill) %>
    </div>
  <div class="form-card">

<h2 class="light thick">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class: "btn-gf" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>