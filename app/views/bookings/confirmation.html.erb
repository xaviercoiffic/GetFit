<div class="layout-content">
  <h2 class="light thick">Your booking session with</h2>
  <br>
  <h1 class="glow thick"><%= @booking.user.name %></h1>
  <br>
  <h2 class="light thick">is scheduled on <br>
    <%= @booking.date.strftime('%-d, %B %Y') %> <br>
    at <%= @booking.time.strftime('%-I:%M%p') %>
  </h2>
  <br>
<%= link_to "View Bookings", user_bookings_path(current_user), class: "btn-gf" %> <br><br><br>
  <%= link_to "Cancel booking", user_path(@booking.user), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }, class: "btn-gf btn-danger" %>
</div>
