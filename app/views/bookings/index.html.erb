<div class="layout-content">

<div class="row justify-align-center">
  <h2 class="glow"> My Bookings </h2>
</div>
  <br>
<div class="user-list">
<ul id="user-ul">
  



  <% @bookings_by_user.each do |user_id, bookings| %>
  <h3>Bookings for <%= User.find(user_id).name %></h3>
  <% if bookings.empty? %>
    <p>No bookings yet.</p>
  <% else %>
    <ul>
      <% bookings.each do |booking| %>
        <li>
          <%= booking.date %> at <%= booking.time %> - <%= booking.duration %> minutes
          (<%= booking.location %>) - <%= booking.status %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>


</div>
</div>




